.row
  .span12
    %ul.breadcrumb
      %li
        %a{:href => recipes_path}
          Small Group
        %span{:class => "divider"}
          = "/"
      %li.active
        = "#{@recipe.name}"

#show_recipes
  .row
    .hero-unit.panel-blue
      %img{:id => "thumb", :src => @recipe.thumbnail}
      .hero-content
        %h1= @recipe.name  
        %p= "#{@recipe.description}"
      
  .row
    .span12#servings
      %h2 1. Choose Number of Servings
      %p
        Select servings below, and ingredients will be automatically scaled. 
      %ul.nav.nav-pills
        %li{:class => @active_5 ? 'active' : ''}
          %a{:href => "?servings=5"}
            5 servings
        %li{:class => @active_10 ? 'active' : ''}
          %a{:href => "?servings=10"}
            10 servings
        %li{:class => @active_20 ? 'active' : ''}
          %a{:href => "?servings=20"}
            20 servings
        %li{:class => @active_50 ? 'active' : ''}
          %a{:href => "?servings=50"}
            50 servings
  .row
    .span12#ingredients
      %h2 2. Buy Ingredients
      %p
        Hover over ingredients for a photo, where to buy, and tips.
      %table.table
        - @recipe.recipe_ingredients.each do |ing|
          %tr.
            %td
              = "#{ing.amount}x"
            %td
              %a{:href => ""} 
                = ing.ingredient.display_name
            %td
              = "$#{ing.amount * ing.ingredient.price}"
        %tr
          %td
          %td
            Total cost of ingredients
          %td
            = "$#{@recipe.total_cost}"
        %tr
          %td
          %td
            Cost per person
          %td
            = "$#{@recipe.cost_per_person}"
  .row
    .span12#notes
      %h2 3. Preparation
      %div= "#{@recipe.directions}"

  .row
    .span12
      %h2 4. Comments
      .hero-unit
        - @comments.each do |comment|
          .media
            .pull-left
              %img.media-object{ :src => "/assets/miniuser.png", :alt => "user" }
            .media-body
              %h4.media-heading
                = comment["title"]
              = comment["comment"]
              
        = form_tag "/small/add_new_comment" do
          = hidden_field_tag "recipe_id", @recID
          = text_field_tag "title", nil, :placeholder => "Name"
          <br>
          #comment
            = text_area_tag "comment", nil, :placeholder => "Comment", :cols => 40
          = submit_tag "Post Comment"
    
:javascript
  - @recipe.recipe_ingredients.each do |ing|
    $('#mylink').click(function() {  
      $('#mylink').after("#{escape_javascript new_snazzy_select_tag(myarray)}");
    };
