:javascript
  // Create the tooltips only on document load
  $(document).ready(function()
  {
  // Notice the use of the each() method to acquire access to each elements attributes
  $('#ingredients_info a[image]').each(function()
    {
      $(this).qtip({
        content: '<img src="' + $(this).attr('image') + '" />', // Use the tooltip attribute of the element for the content
        show: { when: { event: 'click' } },
        hide: { when: { event: 'unfocus' } }
      });
    });
  });


.row
  .span12
    %ul.breadcrumb
      %li
        %a{:href => recipes_path}
          Small Group
        %span{:class => "divider"}
          = "/"
      %li.active
        = "#{@recipe.name}"

#show_recipes
  .row
    .hero-unit.panel-blue
      %img{:id => "thumb", :src => @recipe.thumbnail}
      .hero-content
        %h1= @recipe.name  
        %p= "#{@recipe.description}"
      
  .row
    .span12#servings
      %h2 1. Choose Number of Servings
      %p
        Select servings below, and ingredients will be automatically scaled. 
      %ul.nav.nav-pills
        %li{:class => @active_default ? 'active' : ''}
          %a{:href => "?servings="}
            = @recipe.servings.to_s + " servings (Original)"
        %li{:class => @active_5 ? 'active' : ''}
          %a{:href => "?servings=5"}
            5 servings
        %li{:class => @active_10 ? 'active' : ''}
          %a{:href => "?servings=10"}
            10 servings
        %li{:class => @active_20 ? 'active' : ''}
          %a{:href => "?servings=20"}
            20 servings
        %li{:class => @active_50 ? 'active' : ''}
          %a{:href => "?servings=50"}
            50 servings
  .row
    .span12#ingredients
      %h2 2. Buy Ingredients
      %p
        Hover over ingredients for a photo, where to buy, and tips.
      #ingredients_info
        %table.table
          %tr
            %th
              Quantity
            %th
              Item
            %th
              Buy at
            %th
              Cost
          - @recipe.recipe_ingredients.each do |ing|
            %tr
              %td
                = "#{ing.amount}x"
              %td
                %a#item{:image => "#{ing.ingredient.photo}"}
                  = ing.ingredient.display_name
              %td
                %a{:href => ""}
                  = ing.ingredient.location.name
              %td
                = "$#{ing.price}"
          %tr
            %td
            %td
              %h4 Total cost of ingredients
              %h4 Cost per person
            %td
            %td
              %h4="$#{@recipe.total_cost}"
              %h4="$#{@recipe.cost_per_person}"
  .row
    .span12#notes
      %h2 3. Preparation
      %p= "#{@recipe.directions}"
