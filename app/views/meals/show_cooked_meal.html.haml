.row
  .span12
    %ul.breadcrumb
      %li
        %a{:href => meals_path}
          Large Group
        %span{:class => "divider"}
          = "/"
      %li.active
        = "#{@meal.name}"

#show_cooked_meals
  .row
    .hero-unit.panel-red
      %img{:id => "thumb", :src => @meal.thumb}
      .hero-content
        %h1= @meal.name  
        %p= "#{@meal.description}"
      
  .row
    .span12#servings
      %h2 1. Choose Number of Servings
      %p
        Select servings below, and ingredients will be automatically scaled. 
      %ul.nav.nav-pills
        %li{:class => @active_150 ? 'active' : ''}
          %a{:href => "?servings=150"}
            150 servings
        %li{:class => @active_200 ? 'active' : ''}
          %a{:href => "?servings=200"}
            200 servings
        %li{:class => @active_250 ? 'active' : ''}
          %a{:href => "?servings=250"}
            250 servings
  .row
    .span12#ingredients
      %h2 2. Buy Ingredients
      %p
        Hover over ingredients for a photo, where to buy, and tips.
      %table.table
        - @meal.cooked_meal_ingredients.each do |ing|
          %tr
            %td
              = "#{ing.amount}x"
            %td
              %a{:href => ""}
                = ing.ingredient.display_name
            %td
              = "$#{ing.amount * ing.ingredient.price}"
        %tr
          %td
          %td
            Total cost of ingredients
          %td
            = "$#{@meal.total_cost}"
        %tr
          %td
          %td
            Cost per person
          %td
            = "$#{@meal.cost_per_person}"
            

  .row
    .span12#notes
      %h2 3. Preparation
      %div= "#{@meal.directions}"
  
  .row
    .span12
      %h2 4. Comments
      .hero-unit
        - @comments.each do |comment|
          .media
            .pull-left
              %img.media-object{ :src => "/assets/miniuser.png", :alt => "user" }
            .media-body
              %h4.media-heading
                = comment["title"]
              = comment["comment"]
              
        = form_tag "/large/add_new_comment" do
          = hidden_field_tag "meal_id", @mealID
          = text_field_tag "title", nil, :placeholder => "Name"
          <br>
          #comment
            = text_area_tag "comment", nil, :placeholder => "Comment", :cols => 40
          = submit_tag "Post Comment"
      
