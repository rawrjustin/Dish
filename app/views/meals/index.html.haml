%h1 Large Group Meals

.row-fluid
  .span6
    = search_form_for @q do |f|
      = f.text_field :name_cont
      = f.submit
.row-fluid
  .span2
    .sidebar.affix.span2
      %ul.nav.nav-list
        %li
          %h5 Show the following meals
        %li
          %a{:href => ""}
            Meals under $2
        %li.active
          %a{:href => ""}
            Meals under $5

  .span9
    - if @meals.count == 0
      .alert Sorry, no results match your criteria.
    - else
      .thumbnails
        - @meals.each do |meal|
          %li.span3
            .thumbnail#meal
              %a{:href => meal_path(meal)}
                %p= meal.name
                %img{:src => meal.thumb}
              %p= meal.type
      = paginate @meals
