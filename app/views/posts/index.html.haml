%form{ :action => "", :method => "get"}
  %fieldset
    %label{:for => "term"} Term:
    %input{:type => "text", :name => "term", :class => "text"}
    %input{:type => "submit", :value => "Search", :class => "button"}

.row-fluid
  .blog-body
    .blog-header
      %h1#blog Cooking Tips
    %table#blog
      - @posts.each do |post|
        %tr
          %td#blog
            %h4#date= post.created_at.strftime("%b %d, %Y")
            %h4#author
              by
              = post.author
            %a{:href => post_path(post)}
              %h2#blog= post.title
            %p#blog= post.content
            %a{:href => post_path(post)}
              [Read Full Article]
